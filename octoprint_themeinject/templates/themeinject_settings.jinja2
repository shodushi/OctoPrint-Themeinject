<form class="form-horizontal">
    <h4>General</h4>
    <fieldset>
        <div data-bind="css: { disabled: !ownSettings.enableCustomization() }">
            <h4>CSS code</h4>
            <div data-bind="foreach: ownSettings.color">
                <div class="control-group">
                    <label class="control-label"></label>
                    <div class="controls">
                        <textarea type="color" class="input-mini" data-bind="value: value"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <div data-bind="css: { disabled: !ownSettings.enableCustomization() }">
            <h4>JavaScript/jQuery code</h4>
            <div data-bind="foreach: ownSettings.color">
                <div class="control-group">
                    <div class="controls">
                        <textarea type="color" class="input-mini" data-bind="value: value"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>

</form>